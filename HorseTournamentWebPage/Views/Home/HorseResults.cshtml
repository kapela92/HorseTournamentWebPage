@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.name;
}

@model IEnumerable<HorseTournamentWebPage.Models.ResultModel>

<h2>Wyniki dla: @ViewBag.name </h2>
<table class="table table-striped table-hover">
    <tr>
        <th>Zawody</th>
        <th>Lokalizacja</th>
        <th>Koń</th>
        <th>Data</th>
        <th>Type</th>
        <th>Miejsce</th>
    </tr>

    @foreach (var r in Model)
    {
        <tr>
            <td>@r.tournament</td>
            <td>@r.location</td>
            <td>@r.horse</td>
            <td>@r.date</td>
            <td>@r.type</td>
            <td>@r.position</td>
        </tr>
    }
</table>