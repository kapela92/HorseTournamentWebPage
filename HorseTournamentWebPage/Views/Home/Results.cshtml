@{
    ViewBag.Title = "Wyniki Zawodów";
}

@model IEnumerable<HorseTournamentWebPage.Models.ResultModel>

<h2>@ViewBag.tournament</h2>

<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#Debiuts">Debiuty</a></li>
    <li><a data-toggle="pill" href="#MiniLL">MiniLL</a></li>
    <li><a data-toggle="pill" href="#LL">LL</a></li>
    <li><a data-toggle="pill" href="#L">L</a></li>
    <li><a data-toggle="pill" href="#L1">L1</a></li>
</ul>
<div class="tab-content">
    <div id="Debiuts" class="tab-pane fade in active">
        <table class="table table-striped table-hover">
            <tr>
                <th>Miejsce</th>
                <th>Zawodnik</th>
                <th>Koń</th>
                <th>Czas</th>
                <th>Punkty</th>                
            </tr>

            @foreach (var r in Model)
            {
                if (r.type=="Debiut")
                {
                <tr>
                    <td>@r.position</td>
                    <td>@r.player</td>
                    <td>@r.horse</td>
                    <td>@r.time</td>
                    <td>@r.points</td>
                </tr>
                }
            }
        </table>
