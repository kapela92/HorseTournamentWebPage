<div class="tab-content">
    <div id="Debiuts" class="tab-pane fade in active">
        <h3>Limit Czasu: @ViewBag.LimitDebiut</h3>       
            <h1></h1>
            <table class="table table-striped table-hover">
                <tr>
                    <th>L.p.</th>
                    <th>Zawodnik</th>
                    <th>Koń</th>
                    <th>Czas</th>
                    <th>Punkty</th>
                </tr>
                @{i = 1;h = 0;}
                @foreach (var r in Model)
                {
                    if (r.type == "Debiut")
                    {
                        if (h < r.hundredth)
                        {
                            wyg[0] = Convert.ToString(i);
                            wyg[1] = r.player;
                            wyg[2] = r.horse;
                            wyg[3] = r.time;
                            wyg[4] = Convert.ToString(r.points);
                            h = r.hundredth;
                            <h3>Obecnie wygrywa:   @wyg[1] i  @wyg[2] </h3>
                            <h3>Lista startowa: </h3>
                        }
                        <tr>
                            <td>@i</td>
                            <td>@r.player</td>
                            <td>@r.horse</td>
                            <td>@r.time</td>
                            <td>@r.points</td>
                        </tr>
                        i++;
                    }
                }
            </table>
</div>
